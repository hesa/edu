import java.util.ArrayList;

public class Field {

    private ArrayList<Box> boxes;
    private int xSize;
    private int ySize;



    /**
     *
     * Creates a Field 
     *
     * @param xSize Size of the field - horizontal
     * @param ySize Size of the field - vertical
     *
     */
    public Field(int xSize, int ySize) {
	this.xSize = xSize ;
	this.ySize = ySize ;
    }

    /**
     *
     * Creates a square Field 
     *
     * @param size Size of the field (X and Y)
     */
    public Field(int size) {
	this(size, size);
    }

}
